+'use client';
+
+import React, { useEffect, useRef } from 'react';
+import gsap from 'gsap';
+import { ScrollTrigger } from 'gsap/ScrollTrigger';
+import WhoWeAre from '@/components/WhoWeAre';
+import ProjectShowcase from '@/components/ProjectShowcase';
+import Services from '@/components/Services';
+
+gsap.registerPlugin(ScrollTrigger);
+
+export default function ParallaxPanelTest() {
+  const rootRef = useRef<HTMLDivElement>(null);
+
+  useEffect(() => {
+    if (!rootRef.current) return;
+
+    const ctx = gsap.context(() => {
+      const panels = Array.from(
+        rootRef.current!.querySelectorAll<HTMLElement>('.parallax-panel')
+      );
+
+      panels.forEach((panel) => {
+        ScrollTrigger.create({
+          trigger: panel,
+          start: 'top top',
+          end: '+=200%',
+          pin: true,
+          pinSpacing: false,
+          anticipatePin: 1,
+        });
+      });
+
+      const servicesPanel = rootRef.current!.querySelector<HTMLElement>(
+        '.services-panel'
+      );
+      const servicesTint = rootRef.current!.querySelector<HTMLElement>(
+        '.services-entry-tint'
+      );
+
+      if (servicesPanel && servicesTint) {
+        gsap.fromTo(
+          servicesPanel,
+          { y: 120, scale: 0.985 },
+          {
+            y: 0,
+            scale: 1,
+            ease: 'none',
+            scrollTrigger: {
+              trigger: servicesPanel,
+              start: 'top bottom',
+              end: 'top top',
+              scrub: 0.75,
+            },
+          }
+        );
+
+        gsap.fromTo(
+          servicesTint,
+          { opacity: 0.86, filter: 'blur(10px)' },
+          {
+            opacity: 0,
+            filter: 'blur(0px)',
+            ease: 'none',
+            scrollTrigger: {
+              trigger: servicesPanel,
+              start: 'top 92%',
+              end: 'top 35%',
+              scrub: 0.75,
+            },
+          }
+        );
+      }
+    }, rootRef);
+
+    return () => ctx.revert();
+  }, []);
+
+  return (
+    <div ref={rootRef} className="relative">
+      <section className="parallax-panel about-panel relative z-10 bg-[#F3F2EF]">
+        <WhoWeAre />
+      </section>
+
+      <section className="parallax-panel projects-panel relative z-20 bg-neutral-50">
+        <ProjectShowcase />
+      </section>
+
+      <section className="parallax-panel services-panel relative z-30 bg-[#F3F2EF] overflow-hidden">
+        <div className="services-entry-tint pointer-events-none absolute inset-0 z-40 bg-[radial-gradient(1200px_520px_at_50%_12%,rgba(33,106,120,0.28),transparent_70%),radial-gradient(900px_480px_at_82%_28%,rgba(91,64,116,0.22),transparent_75%),linear-gradient(to_bottom,rgba(24,40,52,0.22),rgba(243,242,239,0.62)_42%,rgba(243,242,239,0.9))]" />
+        <Services />
+      </section>
+
+      <div className="h-[40vh] bg-[#F3F2EF]" aria-hidden />
+    </div>
+  );
+}
